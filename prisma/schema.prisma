generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  location location[]
}

model Group {
  id         Int       @unique @default(autoincrement())
  groupName  String
  locationId Int
  location   location? @relation(fields: [locationId], references: [id])
}

model location {
  id         Int     @id @default(autoincrement())
  name       String
  users      user[]
  groups     Group[]
  locationId Int
}
